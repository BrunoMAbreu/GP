{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "user.json",
    "title": "User",
    "description": "Someone who can register and log into site",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "minimum": 1,
            "unique": true
        },
        "name": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "unique": true
        },
        "password": {
            "minLength": 8,
            "type": "string"
        },
        "phone": {
            "type": "string"
        },
        "profile": {
            "type": "string",
            "enum": [
                "voluntary",
                "worker"
            ]
        },
        "birthDate": {
            "$ref": "date.json"
        },
        "isLogged": {
            "type": "boolean",
            "default": true
        }
    },
    "required": [
        "id",
        "name",
        "email",
        "password",
        "phone",
        "profile",
        "birthDate",
        "isLogged"
    ]
}