{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Date",
    "description": "Year, month and day",
    "definitions": {
        "type": "object",
        "properties": {
            "year": {
                "type": "integer",
                "minimum": 1919
            },
            "month": {
                "type": "integer",
                "minimum": 1,
                "maximum": 12
            },
            "day": {
                "type": "integer",
                "minimum": 1,
                "maximum": 31
            }
        },
        "required": [
            "year",
            "month",
            "day"
        ]
    }
}