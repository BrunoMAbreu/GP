<div id="searchUsers">
    <form id="searchUsersForm" method="GET" action="/{{route}}">
        <div class="form-group">
            <label>Nome:</label>
            <input class="search-input-form" type="text" name="name" />
        </div>
        <div class="form-group">
            <label>Género:</label>
            <select name="gender" class="search-input-form" placeholder="gender">
                <option value='Male'>Macho</option>
                <option value='Female'>Femea</option>
                <option value="" selected></option>
            </select>
        </div>
        <div class="form-group">
            <label>Vacinado:</label>
            <select name="vaccinated" class="search-input-form" placeholder="Vacinado">
                <option value="true">Sim</option>
                <option value="false">Não</option>
                <option value="" selected></option>
            </select>
        </div>
        <div class="form-group">
            <label>Esterilizado:</label>
            <select name="sterilized" class="search-input-form" placeholder="Esterilizado">
                <option value="true">Sim</option>
                <option value="false">Não</option>
                <option value="" selected></option>
            </select>
        </div>
        <div class="form-group">
            <label>Tipo:</label>
            <select name="dog" class="search-input-form" placeholder="tipo">
                <option value="true">Cão</option>
                <option value="false">Gato</option>
                <option value="" selected></option>
            </select>
        </div>
        <div class="form-group">
            <label>Data de Nascimento:</label>
            <input class="search-input-form" type="date" name="birthday" />
        </div>
        <div id="submit" class="form-group" >
            <button type="submit" class="confirmationButton" id="searchSubmitButton">Pesquisar</button>
        </div>
    </form>
</div>