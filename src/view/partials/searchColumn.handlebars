<div id="searchUsers">
    <form id="searchUsersForm" method="post" action="/workers">
        <div class="form-group">
            <label>Nome:</label>
            <input class="search-input-form" type="text" name="userName" />
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input class="search-input-form" type="email" name="email" />
        </div>
        <div class="form-group">
            <label>Telefone:</label>
            <input class="search-input-form" name="phoneNumber" />
        </div>
        <div class="form-group">
            <label>Data de Nascimento:</label>
            <input class="search-input-form" type="date" name="birthDate" />
        </div>

        <div class="form-group">
            <label>Filtro:</label>
            <select name="cars" size="3" class="search-input-form">
                <option value="all">Todos</option>
                <option value="notConfirmed">Por confirmar</option>
                <option value="confirmed">Confirmados</option>
            </select>
        </div>

        <div id="submit" class="form-group">
            <button type="submit" class="confirmationButton">Registar</button>
        </div>
    </form>
</div>