<div style="margin-left: 3em">
    <h2>{{description}}</h2>
</div>
<table id="usersListTable">
    <thead>
        <tr>
            <th>Pesquisar por:</th>
            <th>ID</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
            <th colspan="3">Acções</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td id="searchCell" rowspan={{searchColumnRowspan}}>{{> searchColumn}}</td>
            <td>
                {{firstLine.user_id}}
            </td>
            <td>
                {{firstLine.username}}
            </td>
            <td>
                {{firstLine.phone}}
            </td>
            <td>
                {{firstLine.email}}
            </td>
            <td>
                {{firstLine.birthDate}}
            </td>
            {{#if firstLine.showActions}}
            <td><a href="/{{firstLine.route}}/{{firstLine.user_id}}">Visualizar</a></td>
            <td><a href="/{{firstLine.route}}/{{firstLine.user_id}}">Actualizar</a></td>
            <td><a href="" onclick="confirmUserDelete({{firstLine.user_id}})">Eliminar</a></td>
            {{else}}
            <td></td>
            <td></td>
            <td></td>
            {{/if}}

        </tr>

        {{> listRowsWorkers}}

    </tbody>

</table>