<div id="register">
    <h1>Registar</h1>
    <form method="post" action="/register">
        <div class="form-group">
            <label>Nome</label>
            <input class="input-form" type="text" name="userName" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="input-form" type="email" name="email" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input class="input-form" type="text" name="password" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Confirmar Password</label>
            <input class="input-form" type="text" name="confirmedPassword" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Número de telefone</label>
            <input class="input-form" name="phoneNumber" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Data de Nascimento</label>
            <input class="input-form" type="date" name="birthDate" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Perfil</label>
            <select class="input-form" name="profile" required>
                <option value="volunteer" selected>Voluntário</option>
                <option value="worker">Trabalhador</option>
            </select>
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div id="submit" class="form-group">
            <button type="submit" class="confirmationButton">Registar</button>
        </div>
    </form>
</div>