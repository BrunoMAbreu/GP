<div id="register">
    <h1>Registar</h1>
    
    {{> flashMsgWarning}}

    <form id="registerForm"  method="post" action="/register">
        <div class="form-group">
            <label>Nome</label>
            <input class="input-form" type="text" name="userName" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input class="input-form" type="email" name="email" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Password</label>
            <input id="input_pw" class="input-form" type="password" name="password" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger" id="span_pw"></span>
            <!--img src="./images/eye_cl.png" style="position: relative; top: -22px; right:-504px; text-align: right"  height="18px" width="18px"-->
        </div>
        <div class="form-group">
            <label>Confirmar Password</label>
            <input id="input_conf_pw" class="input-form" type="password" name="confirmedPassword" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger" id="span_conf_pw"></span>
        </div>
        <div class="form-group">
            <label>Número de telefone</label>
            <input class="input-form" name="phoneNumber" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Data de Nascimento</label>
            <input class="input-form" type="date" name="birthDate" required />
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Perfil</label>
            <select class="input-form" name="profile" required>
                <option value="voluntário" selected>Voluntário</option>
                <option value="funcionário">Funcionário</option>
                <option value="administrador">Administrador</option>
            </select>
            <span class="highlight"></span>
            <span class="bar"></span>
            <span class="text-danger"></span>
        </div>
        <div id="submit" class="form-group">
            <button type="submit" class="confirmationButton" >Registar</button>
        </div>
    </form>
</div>